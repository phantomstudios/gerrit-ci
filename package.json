{
  "name": "@phantom/gerrit-ci",
  "version": "1.0.0",
  "description": "A CI implementation for gerrit projects",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "nyc npm run test",
    "prepublish": "rm -rf dist && mkdir dist && cp -r src index.ts package.json *.md dist",
    "publish": "npm publish dist/"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "failWithoutAssertions": false,
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": ["src"],
    "check-coverage": true
  },
  "publishConfig": {
    "registry": "https://npm.phntms.com"
  },
  "author": "marucci@google.com",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/node": "^14.14.31",
    "@types/sinon": "^9.0.10",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "rewiremock": "^3.14.3",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
